
@{
    /**/

    ViewBag.Title = "FormRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin đăng ký</h2>
<br />
@{
    Html.BeginForm("Register", "HelperRazor", FormMethod.Get);
<table class="table table-bordered">
    <caption class="alert-info" style="color:#FFFfff;"><h4>Thông tin về đơn vị tuyển</h4></caption>
    <tr>
        <td>@Html.Label("Tên đơn vị tuyển (*)")</td>
        <td>@Html.TextBox("txtNameDV")</td>
    </tr>
    <tr>
        <td>@Html.Label("Loại hình doanh nghiệp (*)")</td>
        <td>@Html.DropDownList("Enterprise", new SelectList(ViewBag.listEnterprise, "ID", "Name"))</td>
    </tr>
    <tr>
        <td>@Html.Label("Số lượng nhân viên")</td>
        <td>@Html.TextBox("txtSLNV")</td>
    </tr>

    <caption class="alert-info" style="color:#FFFfff;"><h4>Thông tin liên hệ</h4></caption>
    <tr>
        <td>@Html.Label("Địa chỉ (*)")</td>
        <td>@Html.TextArea("txtAddress")</td>
    </tr>
    <tr>
        <td>@Html.Label("Người liên hệ (*)")</td>
        <td>@Html.TextBox("txtNguoiLH")</td>
    </tr>
    <tr>
        <td>@Html.Label("Số điện thoại (*)")</td>
        <td>@Html.TextBox("txtSDT")</td>
    </tr>
    <tr>
        <td>@Html.Label("Số Fax")</td>
        <td>@Html.TextBox("txtSoFax")</td>
    </tr>
    <tr>
        <td>@Html.Label("Email")</td>
        <td>@Html.TextBox("txtEmail")</td>
    </tr>
    <tr>
        <td>@Html.Label("Địa chỉ Website")</td>
        <td>@Html.TextBox("txtDCWeb")</td>
    </tr>

    <caption class="alert-info" style="color:#FFFfff;"><h4>Thông tin Đăng nhập</h4></caption>
    <tr>
        <td>@Html.Label("Tên đăng nhập (*)")</td>
        <td>@Html.TextBox("txtNameDN")</td>
    </tr>
    <tr>
        <td>@Html.Label("Mật khẩu (*)")</td>
        <td>@Html.Password("txtPass")</td>
    </tr>
    <tr>
        <td>@Html.Label("Xác nhận mật khẩu")</td>
        <td>@Html.TextBox("txtCfPass")</td>
    </tr>

    <caption class="alert-info" style="color:#FFFfff;"><h4>Nhận E-mail</h4></caption>
    <tr>
        <td>@Html.Label("Nhận thư điện tử")</td>
        <td>
            @Html.RadioButton("letter", "Nhận", true)Nhận
            @Html.RadioButton("letter", "Không")Không nhận
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input type="submit" value="Cập nhật" />
            <input type="submit" value="Hủy bỏ" />
        </td>
    </tr>
</table>
}



